{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "SpocR": "Information"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DefaultConnection": "Data Source=localhost;Initial Catalog=SpocRSample;User ID=sa;Password=CHANGE_ME;Pooling=False;Connect Timeout=30;Encrypt=False;Trust Server Certificate=True;Authentication=SqlPassword;Application Name=SpocR-RestApi"
  },
  "SpocR": {
    "ConfigurationFile": "spocr.json",
    "EnableAutoUpdate": true,
    "CommandTimeout": "00:00:30",
    "EnableHealthChecks": true,
    "EnableMetrics": true,
    "LogLevel": "Information"
  },
  "HealthChecks": {
    "UI": {
      "HealthCheckUI": {
        "HealthChecks": [
          {
            "Name": "SpocR Health Check",
            "Uri": "/health"
          }
        ],
        "EvaluationTimeInSeconds": 10,
        "MinimumSecondsBetweenFailureNotifications": 60
      }
    }
  }
}